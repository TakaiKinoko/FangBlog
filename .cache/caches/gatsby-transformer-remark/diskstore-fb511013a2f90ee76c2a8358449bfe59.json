                "position": {
                  "start": { "line": 10, "column": 3, "offset": 440 },
                  "end": { "line": 10, "column": 70, "offset": 507 },
                  "indent": []
                }
              }
            ],
            "position": {
              "start": { "line": 10, "column": 1, "offset": 438 },
              "end": { "line": 11, "column": 1, "offset": 508 },
              "indent": [1]
            }
          },
          {
            "type": "listItem",
            "loose": false,
            "checked": null,
            "children": [
              {
                "type": "paragraph",
                "children": [
                  {
                    "type": "text",
                    "value": "If n kernels are invoked in parallel, n streams need to be used",
                    "position": {
                      "start": { "line": 12, "column": 3, "offset": 511 },
                      "end": { "line": 12, "column": 66, "offset": 574 },
                      "indent": []
                    }
                  }
