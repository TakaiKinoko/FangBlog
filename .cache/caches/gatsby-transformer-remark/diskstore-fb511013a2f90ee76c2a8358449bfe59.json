            "children": [
              {
                "type": "paragraph",
                "children": [
                  {
                    "type": "text",
                    "value": "Every CUDA kernel is invoked on an independent stream",
                    "position": {
                      "start": { "line": 8, "column": 3, "offset": 383 },
                      "end": { "line": 8, "column": 56, "offset": 436 },
                      "indent": []
