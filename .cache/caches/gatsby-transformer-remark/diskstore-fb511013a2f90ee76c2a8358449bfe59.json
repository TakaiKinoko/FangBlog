            }
          },
          {
            "type": "listItem",
            "loose": true,
            "checked": null,
            "children": [
              {
                "type": "paragraph",
                "children": [
                  {
                    "type": "text",
                    "value": "If only one kernel is invoked, the default stream, stream0, is used",
                    "position": {
                      "start": { "line": 10, "column": 3, "offset": 440 },
                      "end": { "line": 10, "column": 70, "offset": 507 },
                      "indent": []
                    }
                  }
